{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "esnext",
		"module": "esnext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "Node",
		"removeComments": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"]
}
